.popup
    &__btn
        display: block;
        text-decoration: none;
        color: #dd7c05;
        border: 2px solid #dd7c05;
        padding: 10px 110px 10px 110px;
        margin-left: 35px;
        margin-top: 30px;
        width: 378px;
        font-family 'FuturaPT Heavy'
        font-weight: bold;
        
    display none
    width: 460px;
    height: 360px;
    background-color: #1a1523;
    position: absolute;
    top: 10%;
    left: 45%;
    form 
        width: 90%;
        margin-left: 35px;
        display: block;

    &-title
        font-family 'FuturaPT Book'
        font-size: 20px;
        color: #fff;
        margin-left: 35px
        margin-top: 25px;
    &_exit
        position: relative;
        &:before 
            content: '';
            background-image: url(../images/close.png) ;
            background-repeat: no-repeat;
            -webkit-background-size: 100% 100%;
            background-size: 100% 100%;
            position: absolute;
            left: 434px;
            top: -42px;
            width: 15px;
            height: 15px;
